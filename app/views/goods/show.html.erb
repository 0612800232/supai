<div id="page" style="height:500px">
  <!-- Wrapper -->
  <div class="wrapper">
    <!-- Left column/section -->
    <section class="column width6 first">

      <h3>查看产品</h3>


      <fieldset>
        <legend>查看产品</legend>
  <p>
          <label class="required" for="name">产品类别</label><br/>
          <%= @good.goods_type.name %>
        </p>
        <p>
          <label class="required" for="name">产品名称</label><br/>
          <%= @good.name %>
        </p>

        <p>
          <label class="required" for="name">产品金额</label><br/>
          <%= @good.amount%>（元）
        </p>
                    <p>
            <label class="required">产品描述</label><br>
               <%= @good.desc%>
          </p>
               <p>
            <label class="required">是否新品推荐</label><br>
                <%= @good.is_new ? "是":"否"%>
          </p>
      </fieldset>


      <%= link_to 'Edit', edit_good_path(@good) %> |
      <%= link_to 'Back', goods_path %>
  </div>
  <!-- End of Wrapper -->
</div>

