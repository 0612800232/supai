
<%= javascript_include_tag :defaults %>
﻿<div id="page">
  <!-- Wrapper -->
  <div class="wrapper">
    <!-- Left column/section -->
    <section class="column width6 first">
      <div class="clear">&nbsp;</div>
      <div class="dataTables_wrapper" id="example_wrapper">
        <div id="add_user" class="dataTables_length"><%= link_to '新建产品分类', new_goods_type_path %></div>
        <table class="display stylized" id="example">
          <thead>
            <tr>
              <th style="width: 125px;">分类名称</th>
              <th style="width: 170px; ">编辑</th>
              <th style="width: 107px; ">删除</th>
            </tr>
          </thead>
          <tbody>
            <% @goods_types.each do |t| %>
              <tr class="gradeA odd">
                <td><%= t.name %></td>
                <td><%= link_to '编辑', edit_goods_type_path(t) %></td>
                <td><%= link_to '删除', t, :confirm => '确定删除', :method => :delete %></td>
              </tr>
            <%end%>
          </tbody>

        </table>
        <%= will_paginate @goods_types,:params => {:name=> params[:name]} %>

      </div>

      <div class="clear">&nbsp;</div>

    </section>
    <!-- End of Left column/section -->

    <!-- End of Right column/section -->
  </div>
  <!-- End of Wrapper -->
</div>

